import java.util.*;
import java.lang.System;

public class Test {

	public static void main(String[] args) 
	{
		Player eric = new Player("Eric","Earth");
		//Territory[][] map = new Territory[5][5];
		
		RiskGame game = new RiskGame(1);
		
		game.addPlayer("Eric","Borg");
		System.out.println(game.getPlayers());
		game.addPlayer("Erica","Char");
		System.out.println(game.getPlayers());
		game.addPlayer("Eric","Polaris");
		System.out.println(game.getPlayers());
		game.finishAddingPlayers();
		game.finishConfirmation();
		
		Territory[][] map = game.initializeBoard();
		
		  for(int a = 0; a <9; a++)
		  {
				for(int b = 0; b < 15; b++)	
				{
			 if(map[a][b].hasResources()) { System.out.print("[x]"); }   
			 if(map[a][b].isHomeBase()) { System.out.print("[O]");} 
			 if(map[a][b].isOccupied()) { System.out.print("["+map[a][b].getOccupants().size()+"]");} 
			 if (!map[a][b].hasResources() && !map[a][b].isHomeBase() && !map[a][b].isOccupied()) {System.out.print("[ ]");}  

				}
				System.out.println();
			}
		  System.out.println(game.getPlayers());
	}
}
